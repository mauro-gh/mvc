
@model List<CourseViewModel>


<h1>Catalogo dei corsi</h1>


@foreach(CourseViewModel course in Model)
{
<div class="row">
    <div class="col-md-2">
        <img src="~/logo.png" width="80">
        
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author </author>
    </div>

    <div class="col-md-2" title=@course.Rating>
        
        @for(int i = 1; i <=5; i++)
        {
            if (course.Rating >= i)
            {
                <i class="fa-solid fa-star"></i>
            }
            else if (course.Rating > i -1 )
            {
                <i class="fa-solid fa-star-half-alt"></i>
            }
            else
            {
                
            }
        }



    </div>
    <div class="col-md-2">
        @course.CurrentPrice<br /><s>@course.FullPrice</s>

    </div>
    <div class="col-md-1">
        <a class="btn btn-outline-info btn-sm" asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id">Dettaglio corso @course.Id</a>        
    </div>
</div>

}




    
