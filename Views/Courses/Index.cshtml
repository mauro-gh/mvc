
@model List<CourseViewModel>
    




<h1>@ViewData["ViewDataTitle"]</h1>

<div>
    <form asp-controller="Courses" asp-action="Index" method="get">
        <input type="text" name="search" placeholder="Cerca...">
        <button><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</div>

@foreach(CourseViewModel course in Model)
{
<div class="row">
    <div class="col-md-2">
        <img src="@course.LogoPath" title="@course.LogoPath" width="80">
        
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author </author>
    </div>

    <div class="col-md-2 rating" title=@course.Rating>
        
        @for(int i = 1; i <=5; i++)
        {
            if (course.Rating >= i)
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating > i -1 )
            {
                <i class="fas fa-star-half-alt"></i>
            }
            else
            {
                <i class="far fa-star"></i>
            }

/*
                        if (Model.Rating >= i)
                        {
                            <i class="fas fa-star"></i>
                        }
                        else if (Model.Rating > i - 1)
                        {
                            <i class="fas fa-star-half-alt"></i>
                        }
                        else
                        {
                            <i class="far fa-star"></i>
                        }
*/

        }



    </div>
    <div class="col-md-2 price">
        @course.CurrentPriceAmount<br /><s>@course.FullPriceAmount</s>

    </div>
    <div class="col-md-1">
        <a class="btn btn-outline-info btn-sm" asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id">Dettaglio corso @course.Id</a>        
    </div>
</div>

}




    
