
@model CourseListViewModel
    



<div class="row">
    <div class="col-md-8">
        <h1>@ViewData["ViewDataTitle"]</h1>
    </div>
    <div class="col-md-4  d-flex align-items-center  " >
        <form asp-controller="Courses" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="search" placeholder="Cerca..." value="@Model.Input.Search">
                <div class="input-group-append">
                    <button><i class="input-group-text fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- inserire qui ordinamento -->
<div class="row">
    <div class="col-md-1 "></div>
    <div class="col-md-5 "><a asp-route-orderby="Title" asp-route-ascending="true">Titolo</a></div>
    <div class="col-md-2 "><a asp-route-orderby="Rating" asp-route-ascending="true">Valutazione</a></div>
    <div class="col-md-2 "><a asp-route-orderby="CurrentPrice" asp-route-ascending="true">Prezzo</a></div>
    <div class="col-md-1 "></div>
</div>


@foreach(CourseViewModel course in Model.Courses)
{
<div class="row border-top border-primary">
    <div class="col-md-1 ">
        <img src="@course.LogoPath" title="@course.LogoPath" width="52">
        
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author </author>
    </div>

    <div class="col-md-2 rating" title=@course.Rating>
        
        @for(int i = 1; i <=5; i++)
        {
            if (course.Rating >= i)
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating > i -1 )
            {
                <i class="fas fa-star-half-alt"></i>
            }
            else
            {
                <i class="far fa-star"></i>
            }

        }



    </div>
    <div class="col-md-2 price">
        @course.CurrentPriceAmount<br /><s>@course.FullPriceAmount</s>

    </div>
    <div class="col-md-1">
        <a class="btn btn-outline-info btn-sm" asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id">Dettaglio corso @course.Id</a>        
    </div>
</div>

}

<nav aria-label="Page navigation example">
  <ul class="pagination d-flex justify-content-center mt-3 pagination-sm">


    <li class="page-item active"><a class="page-link"  asp-route-page="1" >Page 1</a></li>

    <li class="page-item"><a class="page-link" asp-route-page="2">Page 2</a></li>

    <li class="page-item"><a class="page-link" asp-route-page="3">Page 3</a></li>
    

  </ul>
</nav>


    
