@model CourseCreateInputModel

<h1>@ViewData["Title"]  <i class="fa-solid fa-person-chalkboard"></i></h1>

<h2>Dati validi: @ViewData.ModelState.IsValid</h2>

<div>

    <form method="post">

        <div class="row">
            <div class="col-12">
                <div asp-validation-summary="All"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mb-3">
                <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Digita un titolo che attiri gli studenti...">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fa-solid fa-rocket"></i> Crea corso!</button>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <partial name="_Validation"></partial>
}
    

