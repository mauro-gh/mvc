<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["ViewDataTitle"]</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <!-- TinyMCE CDN -->
    <script src="https://cdn.tiny.cloud/1/wy4g6z1sm9sqw42vnpzm8nmk9hz9xhfvckajeprsl1ki52iq/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <a class="navbar-brand"><img src="~/logo.svg" height="30" alt="Logo MyCourse"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"  
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>                
            </button>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item active" >
                        <a class="nav-link" asp-action="Index" asp-controller="Courses">Catalogo corsi</a>
                    </li>
                </ul>
                <partial name="_LoginPartial"></partial>
            </div>
        </nav>
    </header>

    <div class="container">

        @if (TempData["MessaggioDiConferma"] != null)
        {
            <div class="alert alert-success alert-dismissible mt-3" role="alert"> 
                @TempData["MessaggioDiConferma"]
            </div>
        }
        @RenderBody() 
    </div>

    <footer>
        <p>Contattaci al n....</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/ab3c53f099.js" crossorigin="anonymous"></script>
    <!-- client validation -->
    @RenderSection("Scripts", required: false)
</body>
</html>
