{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
      "Default" : "Data Source=Data/MyCourse.db"
  },
  "Courses": {
      "PerPage" : 50,
      "InHome" : 3,
      "Order" : {
          "By" : "Title",
          "Ascending": true,
          "Allow": ["Title", "Rating", "CurrentPrice", "Id"]
      }
  },
  "MemoryCache": {
    "SizeLimit" : 1000
  },
  "ResponseCache": {
      "Home": {
        "Duration" : 60,
        "Location" : "Client"
      }
  }

}
